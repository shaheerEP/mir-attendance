{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false
    },
    "include": [
        "scripts/**/*.ts",
        "src/**/*.ts"
    ]
}